<%- include("header") -%>
    <div>
      <form action="/home" method="post">
        <button class="log-out btn btn-lg btn-dark">Log Out</button>
      </form>
        
    </div>
    <div class="box" id="heading">
      <h1><%=listTitle%></h1> 
    </div>
    <div class="box">
      <% newListItem.forEach( function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input name="checkbox" value=<%=item.id%> type="checkbox" onChange = "this.form.submit()"/>
          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle%>">
      </form>
      <% }) %>
      <form class="item" action="/" method="post">
        <input name="newItem" type="text" placeholder="New Item" autocomplete="off" />
        <button type="submit"  value="<%=listTitle%>">+</button>
        <input type="hidden" name="list" value="<%=listTitle%>">
      </form>
    </div>

<%- include("footer") -%>